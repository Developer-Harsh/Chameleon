<?xml version="1.0" encoding="utf-8"?>

    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bg_main"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="-2dp"
                android:src="@drawable/back"
                app:tint="#131313" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="Dhruv "
                android:textColor="#131313"
                android:fontFamily="@font/poppins_bold" />

            <ImageView
                android:id="@+id/favourite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:padding="8dp"
                android:src="@drawable/heart"
                app:tint="#131313" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menu"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/rectangle"
                android:src="@drawable/menu"
                app:tint="#131313" />

        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/bg_main"
                tools:context=".fragments.HamariFragment">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/profile_image"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/black"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_launcher"
                        />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:paddingVertical="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/followers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:text="224.6k"
                                android:textColor="#202122"
                                android:fontFamily="@font/poppins_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:gravity="center_vertical"
                                android:text="Followers"
                                android:textColor="#95989C"
                                android:fontFamily="@font/poppins_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="15dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/followings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:text="264"
                                android:textColor="#202122"
                                android:fontFamily="@font/poppins_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:gravity="center_vertical"
                                android:text="Following"
                                android:textColor="#95989C"
                                android:fontFamily="@font/poppins_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:text="Teacher"
                                android:textColor="#202122"
                                android:fontFamily="@font/poppins_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:gravity="center_vertical"
                                android:text="Level"
                                android:textColor="#95989C"
                                android:fontFamily="@font/poppins_medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:text="coder_dhruv"
                        android:textColor="#202122"
                        android:fontFamily="@font/poppins_bold" />

                    <com.sneva.roundedview.RoundedImage
                        android:layout_width="18dp"
                        android:layout_height="15dp"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        app:rimage_corner_radius="4dp"
                        android:src="@drawable/indian_flag"
                        android:id="@+id/country" />

                    <TextView
                        android:id="@+id/profile_countryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="India"
                        android:textColor="#95989C"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <com.sneva.roundedview.RoundedImage
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="13dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    app:rimage_corner_radius="8dp"
                    android:src="@drawable/indian_flag"
                    android:id="@+id/profile_langs" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.sneva.roundedview.RoundedImage
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        app:rimage_corner_radius="4dp"
                        android:src="@drawable/star_icon" />

                    <TextView
                        android:id="@+id/profile_rating"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="5.00(631)"
                        android:textColor="#202122"
                        android:fontFamily="@font/poppins_bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/profile_bio"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"

                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/refer_details"
                    android:textColor="#202122"
                    android:fontFamily="@font/poppins" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:paddingVertical="13dp"
                    android:layout_marginTop="5dp"
                    android:text="Start lesson"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    app:backgroundTint="@color/black"
                    app:cornerRadius="50dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/level_tab"
                        android:layout_weight="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/graph"
                        app:tint="#465D6A" />

                    <ImageView
                        android:id="@+id/calendar_tab"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="#465D6A"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/calendar"/>

                    <ImageView
                        android:id="@+id/video_tab"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="#465D6A"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/play"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/level_item"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginStart="15dp"
                        android:gravity="center_vertical"
                        android:text="Interests"
                        android:textColor="#202122"
                        android:fontFamily="@font/poppins_bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/interest_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
           />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:gravity="center_vertical"
                        android:text="Languages"
                        android:textColor="#202122"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:gravity="center_vertical"
                        android:text="Lang"
                        android:textColor="#202122"
                        android:fontFamily="@font/poppins_medium" />



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/calendar_item"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/video_nodata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:text="No Video Available"
                        android:visibility="visible"
                        android:textColor="#202122"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/video_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/video_item"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/calendar_nodata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:text="No Class Available"
                        android:visibility="visible"
                        android:textColor="#202122"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/class_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>


<!--                <com.google.android.material.tabs.TabLayout-->
<!--                    android:id="@+id/tab"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@color/bg_main"-->
<!--                    app:tabIndicatorColor="@color/black"-->
<!--                    app:tabIndicatorHeight="2dp"-->
<!--                    app:tabSelectedTextColor="@color/black"-->
<!--                    app:tabIndicatorFullWidth="false"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/textView2">-->

<!--                </com.google.android.material.tabs.TabLayout>-->

<!--                <androidx.viewpager.widget.ViewPager-->
<!--                    android:id="@+id/viewpager"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="700dp"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/tab" />-->






            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>






    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        app:menu="@menu/profile_menu"
        android:fitsSystemWindows="true"
        android:background="@color/bg_main"
        app:itemTextAppearance="?android:attr/textAppearance"
        app:headerLayout="@layout/header_layout"
        android:layout_gravity="end"/>
    </androidx.drawerlayout.widget.DrawerLayout>


