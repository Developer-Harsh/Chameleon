<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main"
    tools:context=".fragments.HamariFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="Harsh Thakur"
            android:textColor="#131313"
            android:fontFamily="@font/poppins_bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule"
            android:padding="8dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rectangle"
            android:src="@drawable/calender"
            app:tint="#131313" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu"
            android:padding="8dp"
            android:layout_marginLeft="12dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rectangle"
            android:src="@drawable/menu"
            app:tint="#131313" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.sneva.roundedview.RoundedImage
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/profile"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_launcher"
            app:rimage_oval="true" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/textbox"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="000"
                    android:textColor="#202122"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="Followers"
                    android:textColor="#95989C"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/followings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="000"
                    android:textColor="#202122"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="Following"
                    android:textColor="#95989C"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="A1"
                    android:textColor="#202122"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="Level"
                    android:textColor="#95989C"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="stiya_001"
            android:textColor="#202122"
            android:fontFamily="@font/poppins_bold" />

        <com.sneva.roundedview.RoundedImage
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            app:rimage_corner_radius="4dp"
            android:src="@drawable/indian_flag"
            android:id="@+id/country" />

        <TextView
            android:id="@+id/countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="India"
            android:textColor="#95989C"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

    <com.sneva.roundedview.RoundedImage
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:rimage_corner_radius="8dp"
        android:src="@drawable/indian_flag"
        android:id="@+id/langs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:background="@drawable/textbox"
        android:padding="10dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F6F6"
            android:background="@drawable/textbox"
            android:padding="13dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:text="1-on-1"
                android:drawableLeft="@drawable/person"
                android:textColor="#2E3032"
                android:drawableTint="#2E3032"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:text="0/0 minute"
                android:textColor="#2E3032"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:text="left this month"
                android:textColor="#84888C"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:text="Reset Weekly 5:30 AM tommorow"
                android:textColor="#84888C"
                android:paddingVertical="10dp"
                android:fontFamily="@font/poppins_medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:text="Purchase"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                app:backgroundTint="#4965FF"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        app:menu="@menu/nav_drawer"
        android:fitsSystemWindows="true"
        android:background="@color/bg_main"
        app:itemTextAppearance="?android:attr/textAppearance"
        app:headerLayout="@layout/header_layout"
        android:layout_gravity="end"/>



</androidx.drawerlayout.widget.DrawerLayout>

