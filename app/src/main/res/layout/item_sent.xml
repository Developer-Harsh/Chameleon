<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:gravity="right"
    android:id="@+id/layoutRootSent"
    android:orientation="vertical">

    <RelativeLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sneva.roundedview.RoundedImage
            android:id="@+id/image"
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:src="@color/bg_main"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            app:rimage_corner_radius="16dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/image"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginVertical="7dp"
            android:background="@drawable/sent_bg"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:text="Hello Mister,Hello Mister,Hello Mister,Hello Mister,Hello Mister,"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/linearLayout"
            android:textColor="#ddd"
            android:id="@+id/time"
            android:text="2:24" />

    </RelativeLayout>

</LinearLayout>